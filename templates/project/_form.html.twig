<div class="modal-content">
	<div class="modal-header"  style="margin-left: 230px;width: auto">
		<h5 class="modal-title">Add Project</h5>
	</div>
	<div class="modal-body" style="margin-left: 230px;width: auto">
		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<label class="col-form-label">Name</label>
					{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label class="col-form-label">Status</label>
					{{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label class="col-form-label">Date</label>
					{{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label class="col-form-label">Description</label>
					{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label class="col-form-label">Priorite</label>
					{{ form_widget(form.priorite, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label class="col-form-label">User</label>
					{{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
		</div>

		<div class="submit-section">
			<button class="btn btn-primary submit-btn">Submit</button>
		</div>
		{{ form_end(form) }}
	</div>
</div>
