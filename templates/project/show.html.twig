{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ project.nom }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ project.status }}</td>
