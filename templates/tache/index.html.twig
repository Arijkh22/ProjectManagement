{% extends 'base.html.twig' %}

{% block title %}Tache index{% endblock %}

{% block body %}
    <h1>Tache index</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Tache</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for tache in taches %}
            <tr>
                <td>{{ tache.id }}</td>
                <td>{{ tache.tache }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Actions">
                        <a href="{{ path('app_tache_edit', {'id': tache.id, 'id_projet': project.getId()}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form action="{{ path('app_tache_delete', {'id': tache.id, 'id_projet': project.getId()}) }}" method="post" style="display: inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tache.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tache_new', {'id_projet': project.getId()}) }}" class="btn btn-success">Create new</a>
{% endblock %}
