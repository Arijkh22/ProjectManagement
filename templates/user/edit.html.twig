{% extends 'base.html.twig' %}

{% block title %}Modifier un Utilisateur{% endblock %}

{% block body %}
    <div class="content container-fluid">
        <div class="page-header">
            <h3 class="page-title">Modifier un Utilisateur</h3>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            {{ form_widget(form) }}
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <a href="{{ path('user_list') }}" class="btn btn-secondary">Annuler</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
